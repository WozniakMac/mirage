#!/usr/bin/env ruby
$LOAD_PATH.unshift("#{File.dirname(__FILE__)}/../lib")
require 'rubygems'
require 'mirage'
require 'open-uri'
require 'optparse'
require 'mechanize'


include Mirage::Util

args = ARGV

options = {:port => 7001}

puts "args is: #{args}"
OptionParser.new(args) do |opts|
  opts.on("-p", "--port PORT", "the port to start Mirage on") do |port|
    puts "options are #{port}"
    options[:port] = port
  end
end.parse!

mirage = Mirage::Client.new(options)

if ARGV.include?('start')

  if mirage.running?
    puts "Mirage already running"
    exit 1
  end


  args.delete('start')


  puts "Starting the Mirage"
  `thin -p #{options[:port]} -l thin.log -D -V -d -R #{File.dirname(__FILE__)}/../lib/config.ru start`

  wait_until do
    mirage.running?
  end


elsif ARGV.include?('stop')
  puts "Stoping Mirage"
  `thin stop`
else
  puts "You must choose to: Start or Stop the mirage"
  exit 1

end
